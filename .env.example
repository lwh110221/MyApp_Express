# 服务器配置
NODE_ENV=development
PORT=3000
API_VERSION=v1

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=database
DB_CONNECTION_LIMIT=10
DB_CONNECT_TIMEOUT=10000

# JWT配置
JWT_SECRET=jwt_secret_key
JWT_EXPIRES_IN=24h
JWT_COOKIE_EXPIRES_IN=24

# Session配置
SESSION_SECRET=your_session_secret
SESSION_EXPIRES=900000 # 15分钟

# 安全配置
# CORS配置
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 文件上传配置
UPLOAD_PATH=public/uploads
MAX_FILE_SIZE=5242880 # 5MB
MAX_FILES=9 # 最大文件上传数量

# 安全配置
RATE_LIMIT_WINDOW=900000 # 15分钟
RATE_LIMIT_MAX=300 # 请求次数限制
BCRYPT_SALT_ROUNDS=10

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs
MAX_LOG_SIZE=5242880
MAX_LOG_FILES=5

# 缓存配置
STATIC_CACHE_MAX_AGE=86400000 # 1天，以毫秒为单位

# 前端URL（用于生成密码重置链接）
FRONTEND_URL=http://localhost:3000

# 邮件服务配置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=农业电商平台
EMAIL_FROM_ADDRESS=no-reply@example.com

# 星火大模型配置
SPARK_APP_ID=your_spark_app_id
SPARK_API_KEY=your_spark_api_key
SPARK_API_SECRET=your_spark_api_secret

# Redis配置
REDIS_URL=redis://localhost:6379